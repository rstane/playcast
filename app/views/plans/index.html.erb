<div id="content">
  <div id="content_inner">
    <div class="post">
      <h2>参加募集中のプラン一覧</h2>
    </div>

    <b>ソート : </b>
    <%= link_to( "新着", plans_path( sort: nil ) ) %>
    <%= link_to( "人気", plans_path( sort: "populur" ) ) %>
    <br />

    <b>カテゴリ : </b>
    <%= link_to( "すべて", plans_path( category_id: nil ) ) %>

    <% Category.all.each{ |category| %>
      <%= link_to( category.name, plans_path( category_id: category.id ) ) %>
    <% } %>
    <br />

    <div id="paging">
    <% @plans.each{ |plan| %>
      <%# 募集終了判定 %>
      <% if (Time.now <= plan.schedules.sort{ |a, b| b.candidate_day.to_i <=> a.candidate_day.to_i }.first.candidate_day.end_of_day rescue false) %>
      <div class="imgcaption">
        <div class="imginner">
          <%= link_to( plan.title, plan_path( plan ) ) %>
          <br>

          <%# お気に入りボタン %>
          <div id="favorite<%= plan.id %>">
            <%= render partial: '/plans/favorite', locals: { favorite: @favorites[plan.id], plan: plan, klass: "btn" } %>
          </div>

          <br/>
        </div>
      </div>
      <% end %>
    <% } %>
    </div>

    <img id="loading" src='/assets/ajax-loader.gif' alt='loading' width='32px' height='32px' style="display: none;" />
    <div style="display: none;"><%= paginate @plans %></div>
  </div>
</div>

