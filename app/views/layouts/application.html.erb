  </script>

  <%= csrf_meta_tags %>
</head>

<body>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/ja_JP/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>



<div id="container">
  <div id="header">
    <div id="header_inner">
      <h1><a href="/plans"><img src="/assets/logo.png"> </a></h1>
      <p>ソーシャル・レジャーマッチングサービス「Playcast」</p>


  <div id="navbar">
      <div id="submenu">
        <ul>

          <li class="first"><a href="/plans/new"><img src="/assets/postmini.png"></a></li>

          <li><%= link_to( "お知らせ", feed_users_path ) %></li>

          <% if session[:user_id].present? %>
            <li>
              <%= link_to( user_path( session[:user_id] ) ) do %>
                <%= image_tag( current_user.image, size: "28x28", class: "margin_minus2" )%>
                マイページ
              <% end %>
            </li>
          <% else %>
            <%# 未ログイン %>
            <li><%= link_to "Login", "/auth/#{Settings.provider}" %></li>
          <% end %>
        </ul>
      </div>
     </div>
    </div>
    </div>
  </div>

  <div class="container">
    <div id="content">
     <div id="content_inner">
    <%# 通知／エラーメッセージ %>
    <%= simple_format( flash[:notice], class: "alert2"  ) if flash[:notice].present? %>
    <%= simple_format( flash[:alert], class: "alert" ) if flash[:alert].present? %>
 </div>
 </div>

    <%= yield %>

     <div id="foot">

     <div id="footmenu">
<ul>
<li class="first"><a href="#">お問い合わせ・ご意見はこちら</a></li>
<li><a href="<%= pages_terms_path %>">利用規約</a></li>
<li><a href="<%= pages_privacy_path %>">プライバシーポリシー</a></li>
<li><%= link_to "ログアウト", logout_path %></li>

</ul>
</div>




      <div id="footer">
        <div id="footer_inner">
          <p>Copyright (c) Playcast. All Rights Reserved.</p><br>
        </div>
      </div>
    </div>
  </div>
</body>
</html>